<article>
    <div>
        <h3>{{post.title}}</h3>
        <p>{{post.post_text}}</p>
    </div>
    <div>
        by {{post.user.username}} on
        {{post.created_at}}
        |
        <a href="/post/{{id}}">{{post.comments.length}} comment(s)</a>
    </div>
</article>

{{#if loggedIn}}
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>
  <div>
    <button type="submit">add comment</button>
  </div>
</form>
{{/if}}

<div>
  {{#each post.comments}}
  <section>
    <div>
      {{user.username}} on {{created_at}}
    </div>
    <div>
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}